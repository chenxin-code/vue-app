@import 'variable.styl';
@import 'mixin.styl';

$page-bgc = #f0f0f0;
$color-white = #fff;

.login-about {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
  background-color: $color-background-lll;
  box-sizing: border-box;
  .header {
    display: flex;
    flex-direction: column;
    padding-top: 12vh;
    .logo {
      display: flex;
      justify-content: center;
      align-self: center;
      width: 18%;
      propor-padding: 95;
    }
    .app-name {
      display: flex;
      justify-content: center;
      padding: 2vh 0 4vh;
      text-align center
      color: $color-text;
      font-size: 18px;
      font-weight: bold;
      margin-left 5px
      letter-spacing: 10px;
    }
  }
  .radius-form {
    padding: 0 3vh;
    .cells {
      background-color: $color-white;
      border-radius: 5px;
      border: 1px solid $color-line-gray-l;
    }
    .cell {
      //height: 44px;
      padding: 10px 10px;
      overflow hidden
    }
    .cell__hd {
      padding-right: 10px;
      border-right: 1px solid $color-line-gray-l;
      .icon {
        width: 25px;
        propor-padding: 100;
      }
    }
    .cell__bd {
      display: flex;
      align-items: center;
      height: 25px;
      padding-left: 10px;
      input {
        width: 100%;
        height: 100%;
        font-size: $font-size-medium;
      }
    }
    .cell__ft {
      display: flex;
      align-items: center;
      .btn-pass {
        box-sizing: border-box;
        height: 25px;
        line-height: 25px;
        padding: 0 6px;
        border: 1px solid $color-theme-btn-l;
        border-radius: 4px;
        color: $color-theme-btn-l;
        font-size: $font-size-medium;
      }
    }
  }
  .full-form {
    margin-top: 10px;
    font-size $font-size-medium

    .cells {
      background-color: $color-white;
    }

    .cell {
      height: 45px;
      padding: 0 10px;
    }

    .cell__hd {
      box-sizing: border-box;
      width: 85px;
      padding-right: 10px;
      text-align: right;
    }

    .cell__bd {
      display: flex;
      align-items: center;
      height: 100%;
      padding-left: 10px;

      input {
        width: 100%;
        height: 100%;
        font-size: $font-size-medium;
      }
    }
  }
  .btn-box {
    display: flex;
    justify-content: center;
    margin-top: 4vh;
    padding: 0 3vh;
    .btn {
      display: flex;
      flex: 1;
      justify-content: center;
      align-items: center;
      height: 40px;
      background-color: $color-theme-btn-l;
      border-radius: 5px;
      color: $color-white;
      font-size: $font-size-medium;
    }
  }
  .col {
    position: relative;
    padding: 0 22px;
    font-size: $font-size-medium;
    .col-cell {
      display: flex;
      justify-content: space-between;
      margin-top: 15px;
    }
    .col-item {
      color: $color-text;
    }
    .fast {
      display: flex;
      align-items: center;
      img {
        width: 15px;
        height: 15px;
        vertical-align: middle;
        align-items: center;
      }
      .text {
        padding-left: 5px;
      }
    }
  }
  .login-third {
    display: flex;
    position: relative;
    justify-content: center;
    margin-top: 2vh;
    &:before {
      content: ' ';
      box-sizing: border-box;
      position: absolute;
      left: 20px;
      top: 50%;
      right: 70%;
      height: 1px;
      border-top: 1px solid $color-line-gray-l;
      color: $color-line-gray-l;
      transform-origin: 0 0;
      transform: scaleY(0.5);
      z-index: 5;
    }
    &:after {
      content: ' ';
      box-sizing: border-box;
      position: absolute;
      left: 70%;
      top: 50%;
      right: 20px;
      height: 1px;
      border-top: 1px solid $color-line-gray-l;
      color: $color-line-gray-l;
      transform-origin: 0 0;
      transform: scaleY(0.5);
      z-index: 5;
    }
  }
  .zhifubao-logo {
    display: flex;
    justify-content: center;
    margin-top: 2vh;
    .img-cell {
      width: 10%;
      propor-padding: 149;
    }
  }
  input:disabled {
    background-color: rgba(0, 0, 0, 0);
  }
}
.login-about.full-view {
  background-color: $page-bgc;
  .col {
    padding: 0 25px;
  }
  .cell__ft {
    .img-code {
      position: relative;
      width: 90px;
      height: 45px;
    }
  }
}

