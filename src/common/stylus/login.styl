.login2 {
  .input-row {
    display flex;
    align-items center;
    padding 4px 14px;
    border-radius 20px;
    .icon {
      margin-right 8px;
      i {
        font-size 16px;
      }
    }
    .input-div {
      height 24px;
      flex 1;
      input {
        width 100%;
        height 100%;
        border none;
        background none;
        font-size 12px;
      }
    }
  }
  .common-btn {
    padding 12px;
    font-size 18px;
    border-radius 20px;
    font-weight 500;
    text-align center;
  }
  .top-margin-8 {
    margin-top 8px;
  }
}
